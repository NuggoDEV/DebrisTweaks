<bg id='root' xmlns:xsi='http://www.w3.org/1501/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='https://raw.githubusercontent.com/RedBrumbler/Quest-BSML-Docs/gh-pages/schema.xsd'>
    <tab-selector tab-tag="tabs" />
    <horizontal pref-width="58" pref-height="60">
        <tab tab-name="Physics" tags="tabs">
            <vertical>
                <toggle-setting apply-on-change="true" text="Enable DebrisTweaks" value="ModToggle"/>

                <slider-setting apply-on-change="true" text="Velocity Multiplier" value="VelocityMult" show-buttons="true" min="1" max="10"/>
                <slider-setting apply-on-change="true" text="Drag" value="DebrisDrag" show-buttons="true" min="1" max="15"/>
                <toggle-setting apply-on-change="true" text="Enable Gravity" value="UseGravity"/>
                <toggle-setting apply-on-change="true" text="Prevent Rotations" value="PreventRotations"/>
            
                <stack>
                    <horizontal>
                        <action-button text="Test Debris!" on-click="ActivateTestLevel"/>
                        <button text="Reset to Default" on-click="ResetDefault"/>
                    </horizontal>
                </stack>
            </vertical>
        </tab>
    
        <tab tab-name="Cosmetic" tags="tabs" >
            <vertical>
                <toggle-setting apply-on-change="true" text="Enable DebrisTweaks" value="ModToggle"/>

                <toggle-setting apply-on-change="true" text="Enable PC Debris" value="UsePCDebris"/>
                <toggle-setting apply-on-change="true" text="Use Monochromatic Colours"  value="UseMonochromatic"/>
                <slider-setting apply-on-change="true" text="Scale" value="DebrisScale" show-buttons="true"  min="0" max="1.5" increment="0.1"/>
                <text text=" "/>
                <toggle-setting apply-on-change="true" text="Override Debris Lifetime"  value="OverrideDebrisLifetime"/>
                <slider-setting apply-on-change="true" text="Lifespan" value="DebrisLifetime" show-buttons="true" min="0.1" max="15" increment="0.05" id="DebrisLifetimeID" on-change="DebrisLifetimeEvent"/>
            
                <stack>
                    <horizontal>
                        <action-button text="Test Debris!" on-click="ActivateTestLevel"/>
                        <button text="Reset to Default" on-click="ResetDefault"/>
                    </horizontal>
                </stack>
            </vertical>
        </tab>
    </horizontal>
</bg>